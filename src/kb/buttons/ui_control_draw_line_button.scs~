ui_control_draw_line_button
=> nrel_main_idtf:
	[кнопка рисования прямой] (* <- lang_ru;; *);
	[drawing line button] (* <- lang_en;; *);

<- rrel_key_sc_element:
	...
	(*
	<- sc_explanation;;
	<= nrel_sc_text_translation:
		... (* -> [элемент управления, который включает режим рисования прямой. В данном режиме после двух щелчков в разных местах области рисования редактора геометрических чертежей будут нарисаны две точки, через которые будет проведена прямая] (* <- lang_ru;; *);; *);;
	*);

<- rrel_key_sc_element:
	...
	(*
	<- sc_explanation;;
	<= nrel_sc_text_translation:
		... (* -> [control that turns on draw line mode. Click twice on the defferent parts of drawing space. Two points will be drawn and line will be drawn between them.] (* <- lang_en;; *);; *);;
	*);;



